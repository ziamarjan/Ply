source 'https://rubygems.org'

gem 'rails', '3.2.3'

# DB layer
gem 'bson_ext'
gem 'mongoid', ">= 3.0.0.rc"

# Auth layer
gem 'devise'

# Assets compilation
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'
end


# The JScripts
gem 'jquery-rails'

# The view
gem "haml"

# Application daemon
gem 'passenger'

# Helpers
gem 'nokogiri'