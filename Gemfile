source 'https://rubygems.org'

gem 'rails', '3.2.3'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

# DB layer

gem 'bson_ext'
gem 'mongoid'

# Assets compilation
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'
end


# The JScripts
gem 'jquery-rails'

# Application running
gem 'passenger'