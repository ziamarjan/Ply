%h2
  Logon to Ply
=form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

  %table.field_table
    %tr.form_item
      %td.label
        =f.label :email
      %td.field
        =f.email_field :email
    %tr.form_item
      %td.label
        =f.label :password
      %td.field
        =f.password_field :password

  -if devise_mapping.rememberable?
    .form_item
      =f.check_box :remember_me
      =f.label :remember_me

  =f.submit "Sign in"

.links
  =render :partial => "devise/shared/links"